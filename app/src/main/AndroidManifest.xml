<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tomatodetector">

    <!-- Permissão para uso da câmera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permissão para manter a tela ligada opcionalmente -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Declaração de uso da câmera -->
    <uses-feature android:name="android.hardware.camera.any" android:required="true" />
    <!-- autofocus não é obrigatório -->
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tomatodetector"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
